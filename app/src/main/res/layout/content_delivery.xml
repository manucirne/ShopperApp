<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DeliveryActivity"
    tools:showIn="@layout/activity_delivery">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp">

        <TextView
            android:id="@+id/clientname"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:hint="Nome" />

        <TextView
            android:id="@+id/clientadress"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:hint="EndereÃ§o" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/boxes"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:hint="Quantas caixas?" />

            <Button
                android:id="@+id/saveboxes"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SALVAR" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pass"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pular Entrega" />

            <Button
                android:id="@+id/entrega"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Entregar" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>